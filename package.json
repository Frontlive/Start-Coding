{
	"name": "start-coding",
	"version": "0.0.0",
	"private": true,
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"scripts": {
		"build": "turbo run build",
		"dev": "turbo run dev --parallel",
		"lint": "turbo run lint && :",
		"format": "prettier --write --cache \"**/*.{ts,tsx,md}\"",
		"check-format": "prettier --check \"**/*.{ts,tsx,md}\"",
		"prepare": "husky install",
		"test": "turbo run test --parallel",
		"storybook": "turbo run storybook",
		"typecheck": "turbo run typecheck"
	},
	"devDependencies": {
		"eslint-config-custom": "*",
		"husky": "^8.0.0",
		"lint-staged": "^13.0.3",
		"prettier": "^2.7.1",
		"turbo": "^1.7.0"
	},
	"engines": {
		"node": ">=18.11.0"
	},
	"dependencies": {
		"@typescript-eslint/eslint-plugin": "^5.50.0",
		"eslint-plugin-turbo": "^0.0.7"
	},
	"packageManager": "yarn@1.22.19",
	"lint-staged": {
		"*.{ts, tsx}": [
			"yarn lint",
			"yarn format"
		]
	}
}
