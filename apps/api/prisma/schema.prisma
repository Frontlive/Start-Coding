// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  previewFeatures = ["fullTextSearch", "extendedWhereUnique"]
}

generator pothos {
  provider = "prisma-pothos-types"
  clientOutput = "@prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @default(autoincrement()) @id
  email     String   @unique
  name      String
  nickname  String
  picture   String

  provider_user_id   String   @unique

  posted_tasks Task[]
  comments     Comment[]

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@map("users")
}

enum TaskStatus {
  IN_REVIEW
  ACTIVE
  REJECTED
}

model Task {
  id        Int      @default(autoincrement()) @id
  title     String
  description String

  author_id   Int
  author      User     @relation(fields: [author_id], references: [id])

  comments  Comment[]
  rating   Int
  difficulty Difficulty

  status TaskStatus
  thumbnail_url String

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@map("tasks")
}

enum Difficulty {
  BEGINNER
  INTERMEDIATE
  ADVANCED
}

model Comment {
  id        Int      @default(autoincrement()) @id
  comment   String

  user_id   Int
  user      User     @relation(fields: [user_id], references: [id])

  parent_comment_id Int? @unique
  parent_comment    Comment? @relation("ParentChild", fields: [parent_comment_id], references: [id], onDelete: Cascade) 

  child_comments Comment[] @relation("ParentChild")

  task_id   Int?
  task      Task?     @relation(fields: [task_id], references: [id])

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@map("comments")
}